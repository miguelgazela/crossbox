<div class="container">
  <div class="row">
      
    <div class="card">

      <h1 class="page-header">Pedidos de Inscrição</h1>
      
      <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th></th>
            <th>Nome</th>
            <th>Email</th>
            <th>Data</th>
            <th>Opções</th>
          </tr>
        </thead>
        <tbody>

          <% @new_accounts.each_with_index do |new_user, index| %>
          
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><img class="media-object media-object-small" src="<%= new_user.image %>" alt="..."></td>
            <td><%= new_user.name %></td>
            <td><%= new_user.email %></td>
            <td><%= new_user.created_at.strftime("%d/%m/%Y") %></td>
            <td>
              <form action="users/yes/<%= new_user.id %>" method="post">
                <input type="hidden" value="<%= form_authenticity_token() %>" name="authenticity_token"/>
                <button type="submit" class="btn btn-default btn-sm"> <%= fa_icon "check-circle" %> Confirmar</button>
              </form>
              <form action="users/no/<%= new_user.id %>" method="post">
                <input type="hidden" value="<%= form_authenticity_token() %>" name="authenticity_token"/>
                <button type="submit" class="btn btn-default btn-sm"><%= fa_icon "times-circle" %> Recusar</button>
              </form>
            </td>
          </tr>

          <% end %>

        </tbody>
      </table>

    </div>

  </div>

</div>
