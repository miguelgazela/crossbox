<%= stylesheet_link_tag "sessions", :media => "all" %>

<div class="site-wrapper">

  <div class="site-wrapper-inner">

    <div class="cover-container">

      <div class="masthead clearfix">
        <div class="inner">
          <h3 class="masthead-brand">SLNutrition CrossBox</h3>
          <nav>
            <ul class="nav masthead-nav">
              <li><a href="/">Início</a></li>
              <li><a href="/contacts">Contactos</a></li>
            </ul>
          </nav>
        </div>
      </div>

      <div class="inner cover">

        <h3>Criar Conta</h3>

        

        <div class="col-xs-12 col-sm-4 col-sm-offset-4 col-md-6 col-md-offset-3">
        
        <hr>

        <%= form_for (@user), url: "/users" do |f| %>  
        
          <div class="form-group">
            <div class="input-group">
              <div class="input-group-addon"><%= fa_icon "user" %></div>
              <input type="text" name="name" id="name" class="form-control" placeholder="Primeiro e último nome" tabindex="1" required>
            </div>
            <span id="name_help" class="help-block"></span>
          </div>

          <div class="form-group">
            <div class="input-group">
              <div class="input-group-addon"><%= fa_icon "envelope" %></div>
              <input type="email" name="email" id="email" class="form-control" placeholder="Email" tabindex="4">
            </div>
            <span id="email_help" class="help-block"></span>
          </div>

          <div class="row">
            <div class="col-xs-12">
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon"><%= fa_icon "lock" %></div>
                  <input type="password" name="password" id="password" class="form-control" placeholder="Password" tabindex="5">
                </div>
                <span id="password_help" class="help-block">No mínimo 6 caracteres.</span>
              </div>
            </div>
            <div class="col-xs-12">
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon"><%= fa_icon "lock" %></div>
                  <input type="password" name="password_confirmation" id="password_confirmation" class="form-control" placeholder="Confirmar Password" tabindex="6">
                </div>
                <span id="confirm_password_help" class="help-block"></span>
              </div>
            </div>
          </div>
          
          <div class="form-group">
              <button type="submit" id="createAccountButton" class="btn btn-success btn-block" tabindex="7">Criar Conta</button>
          </div>

        <% end %>

        </div>

      </div>

      <div class="mastfoot">
        <div class="inner">
          <p>Built by <a href="https://www.facebook.com/miguelgazela">@miguelgazela</a></p>
        </div>
      </div>

    </div>

  </div>

</div>
